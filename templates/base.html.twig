<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}Welcome{% endblock %}</title>

    {% block stylesheets %}
        <link href="https://bootswatch.com/4/flatly/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('/css/styles.css') }}">
    {% endblock %}
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">PREVOR</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarColor01">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="{{ path('produit_teste_home') }}">Accueil <span class="sr-only">(current)</span></a>
            </li>
          </ul>
        </div>
        <nav class="nav navbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                {% if not app.user %}
                    <a href="{{path('security_login')}}" class="nav-link">Connexion</a>
                {% else %}
                    <a href="{{path('security_logout')}}" class="nav-link">Déconnexion</a>
                {% endif %}
                </li>
            </ul>
        </nav>
    </nav>
      
      <section class="d-flex flex-row">

          <!-- Sidebar -->
            <ul class="nav d-flex flex-column">

                    <li class="nav-item">
                        <a href="{{ path('produit_teste_home') }}" class="nav-link"><i class="fa fa-dashboard fa-fw"></i> Tableau de bord</a>
                    </li>
        
                    <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-flask fa-fw"></i> Gestion des produits testés
                      </a>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ path('produit_teste_index') }}">Produits testés</a>
                        <a class="dropdown-item" href="{{ path('produit_teste_new') }}">Nouveau</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Supprimer</a>
                      </div>
                    </li>
        
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">
                            Gestion des utilisateurs
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Utilisateurs</a>
                            <a class="dropdown-item" href="#">Nouveau</a>
                        </div>
                    </li>
        
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">
                            <i class="fa fa-cogs fa-fw"></i> Gérer les langues
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('langue_list' )}}">Langues</a>
                            <a class="dropdown-item" href="{{ path('langue_new' )}}">Nouveau</a>
                        </div>
                    </li>
        
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">
                            Gérer les solutions
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('solution_list' )}}">Solutions</a>
                            <a class="dropdown-item" href="{{ path('solution_new' )}}">Nouveau</a>
                        </div>
                    </li>
        
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">
                            Gérer les dangerosités
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('dangerosite_list' )}}">Dangerosités</a>
                            <a class="dropdown-item" href="{{ path('dangerosite_new' )}}">Nouveau</a>
                        </div>
                    </li>
                </ul>

    <!-- Main Content -->
    <main class="d-flex flex-column">
        <h1 class="page-header">{% block pageHeader %}{% endblock %}</h1>
        {% block body %}{% endblock %}
    </main>

</section>

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
{% endblock %}

</body>
</html>
