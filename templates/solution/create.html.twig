{% extends 'base.html.twig' %}

{% block title %}Ajouter une solution{% endblock %}

{% block body %}

<h1>
    {% if editMode %}
        Modifier la solution
    {% else %}
        Ajouter une solution
    {% endif %}
</h1>

    {{ form_start(formSolution) }}
        {{ form_row(formSolution.nom) }}
        {{ form_row(formSolution.langue) }}
        {{ form_row(formSolution.isActive) }}
        <button type="submit" class="btn btn-primary">
            {% if editMode %}
                Enregistrer les modifications
            {% else %}
                Ajouter une solution
            {% endif %}
        </button>
    {{ form_end(formSolution) }}
{% endblock %}

